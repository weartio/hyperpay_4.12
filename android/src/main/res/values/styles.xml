<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--    DEFAULT COLORS YOU CAN OVERRIDE IN YOUR APP-->
    <style name="NewCheckoutTheme" parent="Theme.Checkout.Light">
        <item name="headerBackground">@color/headerBackground</item>
        <item name="fontFamily">@font/hanimation</item>
        <item name="cancelButtonTintColor">@color/cancelButtonTintColor</item>
        <item name="listMarkTintColor">@color/listMarkTintColor</item>
        <item name="cameraTintColor">@color/cameraTintColor</item>
        <item name="checkboxButtonTintColor">@color/checkboxButtonTintColor</item>
        <item name="checkoutButtonStyle">@style/NewCheckoutTheme.Button</item>
        <item name="checkoutProgressBarStyle">@style/NewCheckoutTheme.checkoutProgressBarStyle</item>
    </style>

    <style name="NewCheckoutTheme.Button" parent="Checkout.Button.Light">
        <item name="android:background">@color/headerBackground</item>
    </style>

    <style name="NewCheckoutTheme.checkoutProgressBarStyle" parent="Checkout.Progress">
        <item name="android:indeterminateTint">@color/headerBackground</item>
    </style>

    <!--    DEFAULT COLORS YOU CAN OVERRIDE IN YOUR APP-->
    <color name="checkoutProgressBarStyle">#464674</color>
    <color name="headerBackground">#464674</color>
    <color name="cancelButtonTintColor">#FFFFFF</color>
    <color name="listMarkTintColor">#464674</color>
    <color name="cameraTintColor">#464674</color>
    <color name="checkboxButtonTintColor">#464674</color>



</resources>
